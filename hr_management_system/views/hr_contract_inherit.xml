<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>

    <record model="ir.cron" id="contract_data_reminder">
        <field name="name">Contract Document Expiration</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="doall" eval="False"/>
        <field name="model_id" ref="model_hr_contract_document"/>
        <field name="state">code</field>
        <field name="code">model.mail_reminder()</field>
    </record>

    <record model='ir.ui.view' id='contract_document_form_view'>
        <field name="name">hr.contract.document.form</field>
        <field name="model">hr.contract.document</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="contract_ref" string="Contract"/>
                            <field name="doc_attachment_id01" widget="many2many_binary" class="oe_inline"/>
                        </group>
                        <group>
                            <field name="issue_date"/>
                            <field name="expiry_date"/>
                            <field name="notification_type"/>
                            <field name="before_days" attrs="{'invisible' : [('notification_type', '=', 'single')]}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record model='ir.ui.view' id='contract_documents_tree_view'>
        <field name="name">hr.contract.document.tree</field>
        <field name="model">hr.contract.document</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="contract_ref" string="Contract"/>
                <field name="expiry_date"/>
            </tree>
        </field>
    </record>

        <record id="hr_contract_document_action" model="ir.actions.act_window">
            <field name="name">Contract Document</field>
            <field name="res_model">hr.contract.document</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="contract_documents_tree_view"/>
            <field name="context">{'search_default_contract': 1}</field>
        </record>

    <record model="ir.ui.view" id="hr_contract_document_inherit_form_view">
        <field name="name">hr.contract.employee.form.view</field>
        <field name="model">hr.contract</field>
        <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
        <field name="arch" type="xml">
            <div class="oe_button_box" position="inside">
                <button class="oe_stat_button" name="document_view" type="object" icon="fa-list-ol">
                    <field string="Documents" name="document_count" widget="statinfo"/>
                </button>
            </div>
        </field>
    </record>


        <menuitem id="employe_contract_menuitem"
          name="Contracts Documents"
          parent="hr.menu_hr_employee_payroll"
          action="hr_management_system.hr_contract_document_action"
          groups="hr.group_hr_manager" />


    </data>
</odoo>