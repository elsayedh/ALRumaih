<odoo>
    <data>
        <record id="mo_hr_mandate_view_form" model="ir.ui.view">
            <field name="name">mo_hr_mandate_view_form</field>
            <field name="model">hr.mandate</field>
            <field name="arch" type="xml">
                <form string="HR Mandates Form">
                    
                    <header>
                        <button name="reject_action" states="draft"
                                string="Reject" type="object"
                                class="oe_highlight"
                        groups="hr.group_hr_manager,hr_management_system.group_hr_manager_demo"/>

                        <button name="approve_action" states="draft"
                                string="Approve" type="object"
                                class="oe_highlight"
                        groups="hr.group_hr_manager,hr_management_system.group_hr_manager_demo"/>

                        <button name="reset_action" states="reject,approve"
                                string="Reset" type="object"
                        groups="hr.group_hr_manager,hr_management_system.group_hr_manager_demo"/>

                        <field name="state" widget="statusbar" statusbar_visible="draft,reject,approve"/>
                    </header>
                    
                    <sheet>
                        <group>
                        <group>
                            <field name="name"/>
                            <field name="emp_id"/>
                            <field name="emp_job_id" force_save="1"/>
                        </group>
                        <group>
                            <separator/>
                            <field name="date_from"/>
                            <field name="date_to"/>
                        </group>
                        </group>

                        <group>
                            <field name="description"/>
                        </group>
                    </sheet>

                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>

                </form>
            </field>
        </record>

        <record id="mo_hr_mandate_view_tree" model="ir.ui.view">
            <field name="name">mo_hr_mandate_view_tree</field>
            <field name="model">hr.mandate</field>
            <field name="arch" type="xml">
                <tree string="HR Mandates Tree">
                    <field name="name"/>
                    <field name="emp_id"/>
                    <field name="emp_job_id"/>
                    <field name="date_from"/>
                    <field name="date_to"/>
                </tree>
            </field>
        </record>

        <record id="mo_hr_mandate_action" model="ir.actions.act_window">
            <field name="name">Mandates</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.mandate</field>
            <field name="view_mode">tree,form</field>
        </record>

