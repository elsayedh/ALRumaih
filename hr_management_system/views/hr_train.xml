<odoo>
    <data>
        <record id="mo_hr_train_view_form" model="ir.ui.view">
            <field name="name">mo_hr_train_view_form</field>
            <field name="model">hr.train</field>
            <field name="arch" type="xml">
                <form string="HR Train Form">
                    
                    <header>
                        <button name="reject_action" states="draft"
                                string="Reject" type="object"
                                class="oe_highlight"
                        groups="hr.group_hr_manager,hr.group_hr_user"/>

                        <button name="approve_action" states="draft"
                                string="Approve" type="object"
                                class="oe_highlight"
                        groups="hr.group_hr_manager,hr.group_hr_user"/>

                        <button name="reset_action" states="reject,approve"
                                string="Reset" type="object"
                        groups="hr.group_hr_manager,hr.group_hr_user"/>

                        <field name="state" widget="statusbar" statusbar_visible="draft,reject,approve"/>
                    </header>
                    
                    <sheet>
                        <group>
                        <group>
                            <field name="name"/>
                            <field name="emp_id"/>
                            <field name="emp_job_id" force_save="1"/>
                        </group>
                        <group>
                            <field name="emp_manager_id" force_save="1"/>
                            <separator/>
                            <field name="date_from"/>
                            <field name="date_to"/>
                        </group>
                        </group>

                        <group>
                            <field name="description"/>
                        </group>
                    </sheet>

                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>

                </form>
            </field>
        </record>

        <record id="mo_hr_train_view_tree" model="ir.ui.view">
            <field name="name">mo_hr_train_view_tree</field>
            <field name="model">hr.train</field>
            <field name="arch" type="xml">
                <tree string="HR Train Tree">
                    <field name="name"/>
                    <field name="emp_id"/>
                    <field name="emp_job_id"/>
                    <field name="emp_manager_id"/>
                    <field name="date_from"/>
                    <field name="date_to"/>
                </tree>
            </field>
        </record>

        <record id="mo_hr_train_action" model="ir.actions.act_window">
            <field name="name">Trains</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.train</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="mo_hr_employee_form_view_train" model="ir.ui.view">
            <field name="name">mo.hr.employee.view.form.train</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <div class="oe_button_box" position="inside">
                    <button class="oe_stat_button" name="document_view_train" type="object" icon="fa-rocket">
                        <field string="Trains" name="document_count_train" widget="statinfo"/>
                    </button>
                </div>
            </field>
        </record>


        <menuitem id="menu_mo_hr_train"
                  parent="hr_management_system.menu_hr_informations"
                  name="Trains"
                  action="mo_hr_train_action"
                  sequence="2"/>
    </data>
</odoo>